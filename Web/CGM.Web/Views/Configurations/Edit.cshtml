@model CGM.Data.Model.Configuration

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Configuration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ConfigurationName" />
            <div class="form-group">
                <label asp-for="ConfigurationValue" class="control-label"></label>
             
                @Html.TextAreaFor(model => model.ConfigurationValue, new { style = "width: 420px; height: 100px;" })
                <span asp-validation-for="ConfigurationValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
